<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="287.0" prefWidth="814.0"
            style="-fx-background-color: white; -fx-border-color: black;" xmlns="http://javafx.com/javafx/8.0.141"
            fx:controller="lk.ijse.roombooking.controller.roomcontroller.AddRoomController">
    <children>
        <Label layoutX="239.0" layoutY="18.0" prefHeight="50.0" prefWidth="319.0" text="Add New Room">
            <font>
                <Font name="Arial Black" size="33.0"/>
            </font>
        </Label>
        <JFXTextField fx:id="roomIdText" disable="true" focusColor="#ff962f" labelFloat="true" layoutX="53.0"
                      layoutY="98.0" onAction="#roomIdAction" prefHeight="33.0" prefWidth="80.0" promptText="Room ID"/>
        <JFXTextField fx:id="roomCategoryText" focusColor="#ff962f" labelFloat="true" layoutX="198.0" layoutY="98.0"
                      onAction="#roomCategoryAction" prefHeight="33.0" prefWidth="154.0" promptText="Room Category"/>
        <JFXTextField fx:id="roomTypeText" focusColor="#ff962f" labelFloat="true" layoutX="415.0" layoutY="98.0"
                      onAction="#roomTypeAction" prefHeight="33.0" prefWidth="142.0" promptText="Room Type"/>
        <JFXTextField fx:id="bedTypeText" focusColor="#ff962f" labelFloat="true" layoutX="607.0" layoutY="98.0"
                      onAction="#bedTypeAction" prefHeight="33.0" prefWidth="154.0" promptText="Bed Type"/>
        <JFXTextField fx:id="roomFloorText" focusColor="#ff962f" labelFloat="true" layoutX="53.0" layoutY="183.0"
                      onAction="#roomFloorAction" prefHeight="33.0" prefWidth="117.0" promptText="Room Floor"/>
        <JFXTextField fx:id="roomPriceText" focusColor="#ff962f" labelFloat="true" layoutX="198.0" layoutY="183.0"
                      onAction="#roomPriceAction" prefHeight="33.0" prefWidth="176.0" promptText="Room Price"/>
        <JFXButton fx:id="addButton" layoutX="486.0" layoutY="225.0" onAction="#addButtonAction" prefHeight="36.0"
                   prefWidth="98.0" style="-fx-background-color: #FF962F; -fx-background-radius: 3em;" text="Add"
                   textFill="WHITE"/>
        <JFXButton fx:id="cancelButton" layoutX="616.0" layoutY="225.0" onAction="#cancelButtonAction" prefHeight="36.0"
                   prefWidth="98.0" style="-fx-background-color: #FF962F; -fx-background-radius: 3em;" text="Cancel"
                   textFill="WHITE"/>
        <ImageView fx:id="closeImage" fitHeight="36.0" fitWidth="29.0" layoutX="771.0" layoutY="14.0"
                   onMouseClicked="#closeImageClicked" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../assets/Delete_50px_1.png"/>
            </image>
        </ImageView>
    </children>
</AnchorPane>
